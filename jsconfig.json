{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@assets": [
        "./assets/*"
      ],
      "@helpers": [
        "./helpers/*"
      ],
      "@routes": [
        "./routes/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@views": [
        "./views/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}